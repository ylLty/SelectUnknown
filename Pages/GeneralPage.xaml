<Page x:Class="SelectUnknown.Pages.GeneralPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SelectUnknown.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#FFFFDFED"
      Title="GeneralPage" Cursor="">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
        <StackPanel>
            <!--每个配置项一个 Border-->
            <Border Padding="5" Background="#FFFBE8F0" CornerRadius="5" Margin="8,8,8,0">
                <DockPanel>
                    <CheckBox Name="IsStartUp" Checked="IsStartUp_Checked" Unchecked="IsStartUp_Unchecked" DockPanel.Dock="Right" Margin="10,0,0,0" VerticalAlignment="Center" IsChecked="False"/>
                    <TextBlock Text="开机自启" VerticalAlignment="Center" FontSize="14"/>
                </DockPanel>
                <!--阴影效果-->
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                         ShadowDepth="3" 
                         Direction="270" 
                         Opacity="0.5"
                         Color="Black"/>
                </Border.Effect>
            </Border>
            <Border Padding="5" Background="#FFFBE8F0" CornerRadius="5" Margin="8,8,8,0">
                <DockPanel>
                    <CheckBox Name="SilentStart" Checked="SilentStart_Checked" Unchecked="SilentStart_Unchecked" DockPanel.Dock="Right" Margin="10,0,0,0" VerticalAlignment="Center" IsChecked="False" Cursor="Hand"/>
                    <TextBlock Text="静默启动" VerticalAlignment="Center" FontSize="14"/>
                </DockPanel>
                <!--阴影效果-->
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                         ShadowDepth="3" 
                         Direction="270" 
                         Opacity="0.5"
                         Color="Black"/>
                </Border.Effect>
            </Border>
            <Border Padding="5" Background="#FFFBE8F0" CornerRadius="5" Margin="8,8,8,0">
                <DockPanel>
                    <TextBlock Text="日志自动清理时间（天）" VerticalAlignment="Center" FontSize="14"/>
                    <TextBox Name="OldLogDeleteDays" Width="100" VerticalAlignment="Center" Margin="10,0,0,0" TextChanged="OldLogDeleteDays_TextChanged" Text="2" HorizontalAlignment="Right"/>
                </DockPanel>
                <!--阴影效果-->
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                         ShadowDepth="3" 
                         Direction="270" 
                         Opacity="0.5"
                         Color="Black"/>
                </Border.Effect>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
    <!--不是我不想用 Style，而是用 Style 会导致 md 设计无效-->
</Page>
