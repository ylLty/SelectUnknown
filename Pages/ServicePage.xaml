<Page x:Class="SelectUnknown.Pages.ServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SelectUnknown.Pages"
      mc:Ignorable="d" 
      
      Background="#FFDFED"
      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicePage">

    <ScrollViewer  HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
        <StackPanel>
            <Border Padding="5" Background="#FFFBE8F0" CornerRadius="5" Margin="8,8,8,0">
                <DockPanel>
                    <TextBlock Text="搜索引擎" VerticalAlignment="Center" FontSize="14" />
                    <ComboBox Name="SearchEngineSelect" Text="Google" IsEditable="True" IsReadOnly="True" SelectionChanged="SearchEngineSelect_SelectionChanged" Width="100" HorizontalAlignment="Right">
                        <ComboBoxItem Content="Google"></ComboBoxItem>
                        <ComboBoxItem Content="夸克"></ComboBoxItem>
                        <ComboBoxItem Content="Bing (海外版)"></ComboBoxItem>
                        <ComboBoxItem Content="必应"></ComboBoxItem>
                        <ComboBoxItem Content="百度"></ComboBoxItem>
                        <ComboBoxItem Content="Yandex"></ComboBoxItem>
                    </ComboBox>
                    <!--<Button Name="SearchEngine" Content="设置" Margin="10,0,0,0" Background="#FFE89ABD" BorderBrush="#FFE89ABD" VerticalAlignment="Center" HorizontalAlignment="Right" Width="100" Click="SearchEngine_Click"/>-->
                </DockPanel>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Direction="270" Opacity="0.5" Color="Black"/>
                </Border.Effect>
            </Border>
            <Border Padding="5" Background="#FFFBE8F0" CornerRadius="5" Margin="8,8,8,0" ToolTip="使用安卓端 Edge 浏览器的 User-Agent 字符串，优化竖屏使用体验（默认使用 PC 端 Edge）">
                <DockPanel>
                    <CheckBox Name="UsingAndroidUserAgentCheck" Checked="UsingAndroidUserAgentCheck_Checked" Unchecked="UsingAndroidUserAgentCheck_Unchecked" DockPanel.Dock="Right" Margin="10,0,0,0" VerticalAlignment="Center" Cursor="Hand"/>
                    <TextBlock Text="使用安卓 UA 标识" VerticalAlignment="Center" FontSize="14"/>
                </DockPanel>
                <!--阴影效果-->
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Direction="270" Opacity="0.5" Color="Black"/>
                </Border.Effect>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
