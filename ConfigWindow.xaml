<Window x:Class="SelectUnknown.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelectUnknown"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        Title="ConfigWindow" Height="630" Width="920">

    <Grid Cursor="" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!--侧栏-->
        <Grid Grid.Column="0" Background="#FFBFD9DC">
            <StackPanel Margin="15" >
                <Button Name="GeneralButton" Click="GeneralButton_Click" Content="常规设置"></Button>
                <Button Name="HotkeyButton" Content="热键设置" Click="HotkeyButton_Click" Margin="0,15,0,0"></Button>
                <Button Name="SearchButton" Content="搜索设置" Click="SearchButton_Click" Margin="0,15,0,0"></Button>
                <Button Name="AboutButton" Content="关于软件" Click="AboutButton_Click" Margin="0,15,0,0"></Button>
            </StackPanel>
        </Grid>
        <!--主区域-->
        <Grid Grid.Column="1">
            <Frame Name="mainFrame" Source="Pages\GeneralPage.xaml" NavigationUIVisibility="Hidden" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
        </Grid>
    </Grid>
</Window>
