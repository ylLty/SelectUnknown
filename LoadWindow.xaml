<Window x:Class="SelectUnknown.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelectUnknown"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Title="LoadWindow" Height="350" Width="620">
    <Grid>

        <TextBlock Name="CopyrightInfo" Text="Copyright © 2026 yl_lty" Foreground="#F0F0F0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,5">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="3" 
                          Direction="315"
                          BlurRadius="5"
                          Opacity="0.7"
                          Color="Black"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock Name="Version" Text="V" Foreground="White" HorizontalAlignment="Left" Margin="462,208,0,127">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="3" 
                          Direction="315"
                          BlurRadius="5"
                          Opacity="0.7"
                          Color="Black"/>
            </TextBlock.Effect>
        </TextBlock>

    </Grid>
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/res/load-window.png" 
                    Stretch="UniformToFill"/>
    </Window.Background>
</Window>
